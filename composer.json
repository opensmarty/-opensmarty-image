{
  "name": "opensmarty/opensmarty-image",
  "description": "Opensmarty Image is a helper service to handle uploaded images and store images without duplicates.",
  "keywords": [
    "image",
    "service",
    "opensmarty-image",
    "starter-framework",
    "opensmarty-starter",
    "laravel"
  ],
  "homepage": "https://github.com/opensmarty/opensmarty-image",
  "license": "MIT",
  "authors": [
    {
      "name": "Nicolas Wan",
      "email": "opensmarty@163.com",
      "homepage": "https://opensmarty.github.io/"
    }
  ],
  "require": {
    "php": ">=5.3.0",
    "laravel/framework": "5.2.*|5.3.*|5.4.*|5.5.*",
    "intervention/image": "^2.3",
    "intervention/imagecache": "~2.1"
  },
  "require-dev": {
    "phpunit/phpunit": "4.*"
  },
  "autoload": {
    "files": [
      "src/Opensmarty/Image/Foundation/helpers.php"
    ],
    "psr-4": {
      "Opensmarty\\Image\\": "src/Opensmarty/Image"
    }
  },
  "autoload-dev": {
    "psr-4": {
      "Opensmarty\\Image\\Test\\": "tests"
    }
  },
  "extra": {
    "branch-alias": {
      "dev-master": "1.0-dev"
    },
    "laravel": {
      "providers": [
        "Opensmarty\\Image\\OpensmartyImageServiceProvider"
      ]
    }
  }
}
